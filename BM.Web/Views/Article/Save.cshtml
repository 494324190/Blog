@using BM.Models;
@model tb_Article
@{
    ViewBag.Title = "Save";
    Layout = "../Shared/_Layout.cshtml";
}
<style>
    .row {
        margin-top: 23px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <section id="Save">
            <form class="form-horizontal" id="SaveArticleForm">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "标题", @style = "max-width: none" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.ClassificationId, (SelectList)ViewData["Classification"], new { @class = "form-control", @style = "float: left" })
                        <a href="javascript:addClassification()" class="glyphicon glyphicon-plus" style="float: left; margin-top: 8px; margin-left: 5px;"></a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextArea("ckeditor",new {@class = "form-control", @placeholder = "内容"})
                        @Html.HiddenFor(model=>model.Content)
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-md-12 text-right">
                        <button type="button" class="btn btn-default " id="btn_submit">提交</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
<script>
    function addClassification() {
        layer.prompt({
            title: '输入分类名称，并确认',
            formType: 0 //prompt风格，支持0-2
        }, function (pass) {
            var obj = { "aryicleName": pass };
            $.BMSubmit("/Article/SaveAryicle", obj, "", "分类保存失败！","",function() {
                location.replace(location.href);
            });
        });
    }
    function CKcontent() {
        $('#Content').val(CKEDITOR.instances.ckeditor.getData());
    }
    $(function() {
        $('#btn_submit').click(function () {
            CKcontent();
            $.BMSubmit("/Article/Save", "SaveArticleForm","","保存失败！","保存成功！");
        });
       
    });
    CKEDITOR.replace("ckeditor", {
        height: '400px'
    });

</script>
